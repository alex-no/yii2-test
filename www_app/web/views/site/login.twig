{% set this.title = 'Login' %}
{% set this.params.breadcrumbs = [this.title] %}

<div class="site-login">
    <h1>{{ this.title|e }}</h1>

    <p>Please fill out the following fields to login:</p>

    <div class="row">
        <div class="col-lg-5">

            {{ form_start(form, {'id': 'login-form', 'attr': {'class': 'form'}}) }}

            {{ form_row(form.username, {'attr': {'autofocus': true}}) }}
            {{ form_row(form.password) }}
            {{ form_row(form.rememberMe, {
                'template': "<div class=\"custom-control custom-checkbox\">{input} {label}</div>\n<div class=\"col-lg-8\">{error}</div>"
            }) }}

            <div class="form-group">
                <div>
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary', 'name': 'login-button'}}) }}
                </div>
            </div>

            {{ form_end(form) }}

            <div style="color:#999;">
                You may login with <strong>admin/admin</strong> or <strong>demo/demo</strong>.<br>
                To modify the username/password, please check out the code <code>app\models\User::$users</code>.
            </div>

        </div>
    </div>
</div>
